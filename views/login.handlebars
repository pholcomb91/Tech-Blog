<div class="row col-12 justify-content-center">
  <div class="col-3 container rounded border border-secondary p-1 m-1 justify-content-center">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label>username:</label>
        <input class="form-input rounded" type="text" id="username-login" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input rounded" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-warning" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-3 container rounded border border-secondary p-1 m-1">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label>username:</label>
        <input class="form-input rounded" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="form-input rounded" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-secondary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="../public/js/login.js"></script>